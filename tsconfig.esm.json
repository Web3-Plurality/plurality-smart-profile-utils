{
  "compilerOptions": {
    "module": "ESNext",      
    "target": "ESNext",      
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist/esm",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
