{
  "compilerOptions": {
    "module": "ESNext",      // Use ESNext for ES Modules
    "target": "ES2020",      // Target a modern JavaScript version
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
